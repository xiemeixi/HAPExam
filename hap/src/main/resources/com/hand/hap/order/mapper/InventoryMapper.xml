<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hand.hap.order.mapper.InventoryMapper">
    <resultMap id="BaseResultMap" type="com.hand.hap.order.dto.Inventory" extends="com.hand.hap.mapper.StdMapper.STD">
        <result column="INVENTORY_ITEM_ID" property="inventoryItemId" jdbcType="DECIMAL"/>
        <result column="ITEM_CODE" property="itemCode" jdbcType="VARCHAR"/>
        <result column="ITEM_DESCRIPTION" property="itemDescription" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List" >
        INVENTORY_ITEM_ID, ITEM_CODE,ITEM_DESCRIPTION
    </sql>
    <select id="selectByInventory" parameterType="com.hand.hap.order.dto.Inventory" resultMap="BaseResultMap">
        SELECT  INVENTORY_ITEM_ID, ITEM_CODE,ITEM_DESCRIPTION
        from hap_inv_inventory_items
        <where>
            <if test="itemCode != null">
                and ITEM_CODE = #{itemCode,jdbcType=VARCHAR}
            </if>
        </where>
    </select>
</mapper>